{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "xuehai": [
        "src/index"
      ],
      "xuehai/*": [
        "src/*"
      ],
    },
    // "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "**/node_modules"
  ],
}